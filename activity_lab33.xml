<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Lab33Activity">

    <EditText
            android:text="1 2 3 4 10"
            android:layout_width="323dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:hint="введіть коеф. рівняння: a,b,c,d,y"
            android:ems="10"
            android:id="@+id/equationCoeffEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:text="6"
            android:layout_width="324dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:hint="введіть розмір популяції"
            android:ems="10"
            android:id="@+id/populationSizeEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/equationCoeffEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Генетичний алгоритм"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geneticAlgorithmButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/populationSizeEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:id="@+id/geneticAlgorithmTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/additionalTaskButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Додаткове завдання"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/additionalTaskButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/geneticAlgorithmButton"/>

</android.support.constraint.ConstraintLayout>